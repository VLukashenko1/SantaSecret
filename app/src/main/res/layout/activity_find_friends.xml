<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsFinder">

    <ImageView
        android:id="@+id/garlandFriends"
        android:layout_width="406dp"
        android:layout_height="198dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/garland_on_in_box_activity"
        android:rotation="-10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/garland" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputFindFrAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:hint="Enter nick/e-mail or ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garlandFriends" />

    <TextView
        android:id="@+id/resultTextViewFindFriendsAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="177dp"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garlandFriends" />

    <Button
        android:id="@+id/findButtonFindFrAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="29dp"
        android:text="F I N D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputFindFrAct" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFindFriendsAct"
        android:layout_width="378dp"
        android:layout_height="214dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friendImgFindFrAct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/friendInfoFindFrAct"
                android:layout_width="163dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="95dp">

                        <Button
                            android:id="@+id/addToFriendsButtonFindFriendsAct"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#813F51B5"
                            android:text="go"
                            app:iconTint="#5BFFFFFF" />

                        <Button
                            android:id="@+id/cancelButtonFindFriendsAct"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:backgroundTint="#9CDA5858"
                            android:text="cancel"
                            android:textSize="8sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>